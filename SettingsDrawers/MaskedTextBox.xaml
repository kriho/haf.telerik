<UserControl x:Class="HAF.SettingsDrawers.MaskedTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             xmlns:local="clr-namespace:HAF.SettingsDrawers"
             xmlns:haf="http://www.hornung.dev/xaml/presentation">
    <haf:HeaderedFormGroup>
        <haf:HeaderedFormGroup.Header>
            <local:Header/>
        </haf:HeaderedFormGroup.Header>
        <telerik:RadMaskedTextInput Value="{Binding Setting.Value, Mode=TwoWay}" Mask="{Binding Setting.Mask}" TextMode="MaskedText" InputBehavior="Replace" UpdateValueEvent="PropertyChanged"/>
    </haf:HeaderedFormGroup>
</UserControl>
